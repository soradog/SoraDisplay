<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fullscreen_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.SoraDisplay.FullscreenContainer"
    tools:context=".TodayWeatherFragment">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <org.sorakun.soradisplay.SoraDigitalClock
            android:id="@+id/soraDigitalClock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minEms="6"
            android:textColor="@color/white"
            android:textSize="60sp" />

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/weather_label_fetching"
            android:textColor="@color/white"
            android:textSize="60sp" />

        <TextView
            android:id="@+id/lastupdated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

    </TableRow>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/currentIcon"
                android:layout_width="300sp"
                android:layout_height="300sp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:contentDescription="@string/weather_icon_description"
                android:minWidth="60dp"
                android:scaleType="fitXY"
                android:src="@drawable/weather14" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/temperature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minEms="2"
                android:text="22"
                android:textColor="@color/white"
                android:textSize="150sp" />

            <TextView
                android:id="@+id/condition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minEms="3"
                android:text="22"
                android:textColor="@color/white"
                android:textSize="40sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="20sp">

            <TextView
                android:id="@+id/label1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="40sp"
                android:text="@string/weather_label_fetching"
                android:textColor="@android:color/darker_gray"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/label2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="40sp"
                android:text="@string/weather_min_temp_label"
                android:textColor="@android:color/darker_gray"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/label3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="40sp"
                android:text="@string/weather_humidity_label"
                android:textColor="@android:color/darker_gray"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/label4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="40sp"
                android:text="@string/weather_precip_label"
                android:textColor="@android:color/darker_gray"
                android:textSize="50sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/value1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/white"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/value2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/white"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/value3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/white"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/value4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/white"
                android:textSize="50sp" />

        </LinearLayout>

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60sp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/forecastdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="40sp"
                android:textColor="@android:color/darker_gray"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/forecasttime1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingRight="40sp"
                android:text="@string/weather_label_fetching"
                android:textColor="@android:color/darker_gray"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/forecasttime2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingRight="40sp"
                android:text="@string/weather_label_fetching"
                android:textColor="@android:color/darker_gray"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/forecasttime3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingRight="40sp"
                android:text="@string/weather_label_fetching"
                android:textColor="@android:color/darker_gray"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/forecasttime4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingRight="40sp"
                android:text="@string/weather_label_fetching"
                android:textColor="@android:color/darker_gray"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/forecasttime5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingRight="40sp"
                android:text="@string/weather_label_fetching"
                android:textColor="@android:color/darker_gray"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/forecasttime6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingRight="40sp"
                android:text="@string/weather_label_fetching"
                android:textColor="@android:color/darker_gray"
                android:textSize="50sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/blank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="40sp"
                android:textColor="@color/white"
                android:textSize="50sp" />

            <ImageView
                android:id="@+id/forecasticon1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/weather_icon_description"
                android:paddingRight="40sp"
                android:scaleType="fitCenter"
                android:src="@drawable/baseline_thermostat_24" />

            <ImageView
                android:id="@+id/forecasticon2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/weather_icon_description"
                android:paddingRight="40sp"
                android:scaleType="fitCenter"
                android:src="@drawable/baseline_thermostat_24" />

            <ImageView
                android:id="@+id/forecasticon3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/weather_icon_description"
                android:paddingRight="40sp"
                android:scaleType="fitCenter"
                android:src="@drawable/baseline_thermostat_24" />

            <ImageView
                android:id="@+id/forecasticon4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/weather_icon_description"
                android:paddingRight="40sp"
                android:scaleType="fitCenter"
                android:src="@drawable/baseline_thermostat_24" />

            <ImageView
                android:id="@+id/forecasticon5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/weather_icon_description"
                android:paddingRight="40sp"
                android:scaleType="fitCenter"
                android:src="@drawable/baseline_thermostat_24" />

            <ImageView
                android:id="@+id/forecasticon6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/weather_icon_description"
                android:paddingRight="40sp"
                android:scaleType="fitCenter"
                android:src="@drawable/baseline_thermostat_24" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/forecastlabel1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/darker_gray"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/forecastvalue1a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingRight="40sp"
                android:text="@string/weather_label_fetching"
                android:textColor="@color/white"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/forecastvalue2a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingRight="40sp"
                android:text="@string/weather_label_fetching"
                android:textColor="@color/white"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/forecastvalue3a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingRight="40sp"
                android:text="@string/weather_label_fetching"
                android:textColor="@color/white"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/forecastvalue4a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingRight="40sp"
                android:text="@string/weather_label_fetching"
                android:textColor="@color/white"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/forecastvalue5a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingRight="40sp"
                android:text="@string/weather_label_fetching"
                android:textColor="@color/white"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/forecastvalue6a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingRight="40sp"
                android:text="@string/weather_label_fetching"
                android:textColor="@color/white"
                android:textSize="50sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/forecastlabel2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/darker_gray"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/forecastvalue1b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingRight="40sp"
                android:text="@string/weather_label_fetching"
                android:textColor="@color/white"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/forecastvalue2b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingRight="40sp"
                android:text="@string/weather_label_fetching"
                android:textColor="@color/white"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/forecastvalue3b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingRight="40sp"
                android:text="@string/weather_label_fetching"
                android:textColor="@color/white"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/forecastvalue4b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingRight="40sp"
                android:text="@string/weather_label_fetching"
                android:textColor="@color/white"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/forecastvalue5b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingRight="40sp"
                android:text="@string/weather_label_fetching"
                android:textColor="@color/white"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/forecastvalue6b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingRight="40sp"
                android:text="@string/weather_label_fetching"
                android:textColor="@color/white"
                android:textSize="50sp" />
        </TableRow>

    </TableLayout>

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

</LinearLayout>