<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fullscreen_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.SoraDisplay.FullscreenContainer"
    tools:context=".weatherapi.WeatherForecastFragment">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <org.sorakun.soradisplay.natureremo.SoraDigitalClock
            android:id="@+id/soraDigitalClock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minEms="6"
            android:textColor="@color/white"
            android:textSize="60sp" />

        <TextView
            android:id="@+id/weekLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/weather_label_fetching"
            android:textColor="@color/white"
            android:textSize="60sp" />

        <TextView
            android:id="@+id/lastupdated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </TableRow>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Space
                android:id="@+id/tablelabel1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="180sp"
                android:paddingLeft="20sp"
                android:paddingRight="20sp" />

            <Space
                android:id="@+id/tablelabel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="40sp"
                android:paddingLeft="20sp"
                android:paddingRight="20sp" />

            <TextView
                android:id="@+id/weeklyMaxLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="20sp"
                android:paddingRight="20sp"
                android:text="@string/weather_max_temp_label"
                android:textColor="@color/gray_600"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/weeklyMinLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="20sp"
                android:paddingRight="20sp"
                android:text="@string/weather_min_temp_label"
                android:textColor="@color/gray_600"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/weeklyRainLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="20sp"
                android:paddingRight="20sp"
                android:text="@string/generic_rain_label"
                android:textColor="@color/gray_600"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/weeklyHumidLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="20sp"
                android:paddingRight="20sp"
                android:text="@string/weather_humidity_label"
                android:textColor="@color/gray_600"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/weeklyWindLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="20sp"
                android:paddingRight="20sp"
                android:text="@string/weather_windspeed_label"
                android:textColor="@color/gray_600"
                android:textSize="40sp" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/weeklyRecycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>