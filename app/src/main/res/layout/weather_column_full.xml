<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/weathercolumn"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20sp">

        <TextView
            android:id="@+id/weather_full_datetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/weather_label_fetching"
            android:textColor="@color/gray_600"
            android:textSize="50sp" />

        <ImageView
            android:id="@+id/weather_full_icon"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:layout_weight="1"
            android:contentDescription="@string/weather_icon_description"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/weather_full_value1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/weather_label_fetching"
            android:textColor="@color/white"
            android:textSize="70sp" />

        <TextView
            android:id="@+id/weather_full_value2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/weather_label_fetching"
            android:textColor="@color/white"
            android:textSize="70sp" />

        <TextView
            android:id="@+id/weather_full_value3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/weather_label_fetching"
            android:textColor="@color/white"
            android:textSize="70sp" />


</LinearLayout>